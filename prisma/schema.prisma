// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model Pokemon {
  id      Int           @id @default(autoincrement())
  name    String
  item    String?
  ability String       @default("No Ability")
  nature  PokemonNature
  type    PokemonType   @default(NORMAL)
  type2   PokemonType?
  evs     Evs[]
  moves   Moves[]
  teams   Team[]        @relation("TeamMembers")
}

model Moves {
  id        Int         @id @default(autoincrement())
  name      String
  type      PokemonType
  pokemon   Pokemon     @relation(fields: [pokemonId], references: [id], onDelete: Cascade)
  pokemonId Int
}

model Evs {
  id        Int     @id @default(autoincrement())
  hp        Int?    @default(0)
  atk       Int?    @default(0)
  def       Int?    @default(0)
  spaatk    Int?    @default(0)
  spd       Int?    @default(0)
  spe       Int?    @default(0)
  pokemon   Pokemon @relation(fields: [pokemonId], references: [id], onDelete: Cascade)
  pokemonId Int
}

model Team {
  id               String    @id @default(cuid())
  name             String
  description      String?
  pokemonMembersId Int
  members          Pokemon[] @relation("TeamMembers")
  createdAt        DateTime  @default(now())
}

enum PokemonType {
  BUG
  DARK
  DRAGON
  ELECTRIC
  FIGHTING
  FIRE
  FLYING
  GHOST
  GRASS
  GROUND
  ICE
  NORMAL
  POISON
  PSYCHIC
  ROCK
  STEEL
  WATER
}

enum PokemonNature {
  HARDY
  LONELY
  BRAVE
  ADAMANT
  NAUGHTY
  BOLD
  DOCILE
  RELAXED
  IMPISH
  LAX
  TIMID
  HASTY
  SERIOUS
  JOLLY
  NAIVE
  MODEST
  MILD
  QUIET
  BASHFUL
  RASH
  CALM
  GENTLE
  SASSY
  CAREFUL
  QUIRKY
}
